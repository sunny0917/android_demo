<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.scanmanager.QRCodeSetting" >

    <TextView
        android:id="@+id/title2_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1_qrcode"
        android:layout_marginTop="30dp"
        android:text="@string/code_39_title2"
        android:textColor="#0d9678"
        android:textSize="19dp" />

    <RelativeLayout
        android:id="@+id/title2_1_qrcode_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/radioGroup1_qrcode"
        android:layout_below="@+id/title2_qrcode"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cb_qr_code_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
		<LinearLayout 
		    android:id="@+id/ll_qr_code_mini"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cb_qr_code_mini"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Minimum"
            android:textSize="20sp" />
        
		<TextView
            android:id="@+id/tv_qr_code_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text=""
            android:textSize="13sp"/>
		</LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/et_qr_code_mini"
            android:background="@null"
            android:paddingRight="-35dp"
            android:src="@drawable/doubleline" />

        <ImageButton
            android:id="@+id/et_qr_code_mini"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/et_qr_code_mini_delete"
            android:background="@null"
            android:src="@drawable/pencil" 
            android:layout_marginRight="-6dp"
             android:onClick="doClick"/>
        <ImageButton
            android:id="@+id/et_qr_code_mini_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_marginRight="-5dp"
            android:src="@drawable/garbage"
             android:onClick="doClick" 
            />
    </RelativeLayout>

    <RelativeLayout
         android:id="@+id/title2_2_qrcode_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/radioGroup1_qrcode"
        android:layout_below="@+id/title2_1_qrcode_layout"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cb_qr_code_maxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
		<LinearLayout 
		    android:id="@+id/ll_qr_code_maxi"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cb_qr_code_maxi"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Maximum"
            android:textSize="20sp" />
		<TextView
            android:id="@+id/tv_qr_code_maxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text=""
            android:textSize="13sp"/>
		</LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/et_qr_code_maxi"
            android:background="@null"
            android:paddingRight="-35dp"
            android:src="@drawable/doubleline" />

         <ImageButton
            android:id="@+id/et_qr_code_maxi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/et_qr_code_maxi_delete"
            android:layout_marginRight="-6dp"
            android:background="@null"
            android:src="@drawable/pencil" 
             android:onClick="doClick"/>
        <ImageButton
            android:id="@+id/et_qr_code_maxi_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_marginRight="-5dp"
            android:src="@drawable/garbage" 
            android:onClick="doClick"
            />
    </RelativeLayout>

	<TextView
        android:id="@+id/title3_code39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title2_2_qrcode_layout"
        android:layout_marginTop="30dp"
        android:text="@string/code_39_title3"
        android:textColor="#0d9678"
        android:textSize="19dp" />

    <RelativeLayout
        android:id="@+id/title3_1_code39_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/radioGroup1_code39"
        android:layout_below="@+id/title3_code39"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cb_qr_code_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
		<LinearLayout 
		    android:id="@+id/ll_qr_code_pre"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cb_qr_code_pre"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Prefix"
            android:textSize="20sp" />
		<TextView
            android:id="@+id/tv_qr_code_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text=""
            android:textSize="13sp"/>
		</LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/et_qr_code_prefix"
            android:background="@null"
            android:paddingRight="-35dp"
            android:src="@drawable/doubleline" />

        <ImageButton
            android:id="@+id/et_qr_code_prefix"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/et_qr_code_prefix_delete"
            android:layout_marginRight="-6dp"
            android:background="@null"
            android:src="@drawable/pencil"
            android:onClick="doClick" />
         <ImageButton
            android:id="@+id/et_qr_code_prefix_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_marginRight="-5dp"
            android:src="@drawable/garbage"
            android:onClick="doClick" 
            />
        
    </RelativeLayout>

    <RelativeLayout
         android:id="@+id/title3_2_code39_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/radioGroup1_code39"
        android:layout_below="@+id/title3_1_code39_layout"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cb_qr_code_suf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
		<LinearLayout 
		    android:id="@+id/ll_qr_code_suf"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cb_qr_code_suf"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Suffix"
            android:textSize="20sp" />
		<TextView
            android:id="@+id/tv_qr_code_suf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text=""
            android:textSize="13sp" />
		</LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/et_qr_code_suffix"
            android:background="@null"
            android:paddingRight="-35dp"
            android:src="@drawable/doubleline" />

        <ImageButton
            android:id="@+id/et_qr_code_suffix"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/et_qr_code_suffix_delete"
            android:layout_marginRight="-6dp"
            android:background="@null"
            android:src="@drawable/pencil"
            android:onClick="doClick" />
          <ImageButton
            android:id="@+id/et_qr_code_suffix_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_marginRight="-5dp"
            android:src="@drawable/garbage" 
            android:onClick="doClick"
            />
    </RelativeLayout>

</RelativeLayout>
